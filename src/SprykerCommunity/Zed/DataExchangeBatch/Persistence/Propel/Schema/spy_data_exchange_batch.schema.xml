<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\DataExchangeBatch\Persistence" package="src.Orm.Zed.DataExchangeBatch.Persistence">

    <table name="spy_data_exchange_resource_entry" idMethod="native">
        <column name="id_data_exchange_resource_entry" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_data_exchange_bach_task" type="INTEGER"/>
        <column name="content" type="VARCHAR"  required="true"/>

        <foreign-key name="spy_data_exchange_resource_entry-fk_data_exchange_bach_task" foreignTable="spy_data_exchange_bach_task">
            <reference local="fk_data_exchange_bach_task" foreign="id_data_exchange_bach_task"/>
        </foreign-key>

        <behavior name="event">
            <parameter name="spy_data_exchange_resource_entry_all" column="*"/>
        </behavior>
    </table>

    <table name="spy_data_exchange_bach_task">
        <column name="id_data_exchange_bach_task"  required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="task_number" type="VARCHAR"/>
    </table>
</database>
